#version 330

///////////////////////////////////////////////////////////////////

// attribute layout definitions

layout (location = 0 ) in vec2 in_position;
layout (location = 1 ) in vec3 in_color;

///////////////////////////////////////////////////////////////////

// uniforms

uniform mat4 Projection;
uniform mat4 View;
uniform mat4 Model;

///////////////////////////////////////////////////////////////////

// output

out vData
{
    vec4 color;
}vertex;


///////////////////////////////////////////////////////////////////

// implementation

void main()
{
  vertex.color = vec4(in_color, 1.0);
  gl_Position = vec4(in_position, 0.0, 1.0);
}
